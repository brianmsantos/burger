<h1>Eat-Da-Burger!</h1>

<h2>Burgers you want to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
     <div>
        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
        </form>
     </div>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <div class='burgerEaten'>
        <div>
        {{this.burger_name}}
        </div>
    </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger!</h2>

<div class="row">
 <div class="col s12">
   <form action="/burgers" method="POST">
     <input type="text" id="name" name="burger_name" placeholder="Burgers">
     <button type="submit" class="addBurgerButton">Add The Burger</button>
   </form>
 </div>
</div>

